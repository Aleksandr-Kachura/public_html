{% extends "AppFrontEndBundle::layout.html.twig" %}

{% block login %}
    Страница результата
{% endblock %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('bundles/appfrontend/css/1.css') }}"/>
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css" />
{% endblock %}

{% block content %}
    <div class="col-lg-6">
        <form action="{{ path('app_front_end_search') }}" method="post">
            <div class="main">
                <div class="field">
                    <label for="login">Login</label>
                    <input type="text" name="login" class="form-control" placeholder="Search for...">
                </div><!-- /input-group -->
                <div class="field">
                    <label for="city">City</label>
                    <input type="text" name="city" class="form-control" placeholder="Search for...">
                </div><!-- /input-group -->
                <div class="input-group field">
                    <label for="country">Country</label>
                    <input type="text" name="country" class="form-control" placeholder="Search for...">
                </div><!-- /input-group -->
                <button type="submit" class="btn btn-default">Submit</button>
            </div>

        </form>
    </div><!-- /.col-lg-6 -->
    {% if users is defined  %}
        <div class=" col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">

                    <table class="table">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Логин</th>
                            <th>Подробнее</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}

                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.username }}</td>
                                    <td><a href="{{ path('app_front_end_photograph', {'id' : user.id}) }}">Страница</a></td>
                                </tr>



                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
