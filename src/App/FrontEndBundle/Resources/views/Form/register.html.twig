{% extends 'AppFrontEndBundle::layout.html.twig' %}

{% block login %}

        <a class="btn btn-warning" href="{{ path('app_front_end_wellcome') }}">Главная<i class="glyphicon glyphicon-th-large"></i></a>
        <div class="btn-group" role="group">
            <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">Фотосессии<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><a href="{{ path('app_front_end_dpfs') }}">Предложенные фотосессии</a></li>
                <li><a href="{{ path('app_front_end_fotosess') }}">Создать фотоссесию</a></li>
            </ul>
        </div>
        <a class="btn btn-success" href="{{ path('app_front_end_multi') }}">Мой профиль<i class="glyphicon glyphicon-user"></i></a>
        <a class="btn btn-danger" href="{{ path('bundles_login_security_logout') }}">Выход<i class="glyphicon glyphicon-log-out"></i></a>

{% endblock %}


{% block content %}
        {% if form is defined %}
            <h1>Создать кабинет покупателя</h1>
            <div id="registration3" class="popup_block" >
                    {% if error is defined %}
                            <div class="alert alert-danger" role="alert">

                                    {{ error }}

                            </div>
                    {% endif %}
                    <form id="RegisterUserForm" role="form" action="{{ path('app_front_end_addus') }}" method="post" {{ form_enctype(form) }}>
                                <div class="form-group">
                                    {{ form_row(form.email) }}
                                    <div class="bsu_message"></div>
                                </div>
                                <div class="form-group">
                                    {{ form_row(form.firstname) }}
                                </div>
                                <div class="form-group">

                                    {{ form_row(form.lastname) }}

                                </div>
                                <div class="form-group">
                                    {{ form_row(form.username) }}
                                </div>
                                {#{{ form_row(form.jabber) }}#}
                                <div class="form-group">
                                    {{ form_row(form.password) }}
                                </div>
                            {# {{ form_rest(form) }} #}
                            <input name="lang" type="hidden" value="en"/>
                            <button type="submit" class="btn btn-success">Create</button>
                            {{ form_rest(form) }}
                        </form>
                </div>
        {% endif %}

        {% if message is defined %}
            <h1>{{ message }}</h1>
        {% endif %}



    {%endblock %}
{% block jscript %}
       <script>var pathajax="{{ path('app_front_end_ajaxCheckUser') }}";</script>
        <script src="{{ asset('bundles/appfrontend/js/1.js') }}"></script>
{% endblock %}
