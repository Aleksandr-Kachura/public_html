{% extends 'AppFrontEndBundle::layout.html.twig' %}

 {% block title %} <title>Photo Gallery</title> {% endblock %}




{%block content %}
    <div class="wrapper"> <!-- wrapper -->
		<div class="mainTop">
			<h1 class="logo"></h1>
			<div class="registration">
				<span class="topReg"></span>
                    {% if error %}
                        {%  if error.message=='Bad credentials.' %}
                            <span class="error-message">Ошибка доступа</span>
                        {% else %}
                            {{ error.message }}
                        {% endif %}
                    {% endif %}
				<form class="form-inline login-form" method="POST" action="{{ path('bundles_login_security_check') }}">
					<div class="form-group">
						<label for="in1">Username</label>
						<input type="text" name="_username" id="in1">
					</div>
					<div class="form-group">
						<label for="in2">Login</label>
						<input type="password" name="_password" id="in2">
					</div>
					<button class="btn btn-primary" autofocus><i class="glyphicon glyphicon-check"></i>Вход</button>
				</form>			
				<a href="{{path('bundles_login_reg')}}" class="cada btn btn-success"><i class=" glyphicon glyphicon-log-in"></i>Регистрация</a>
			</div> 
		</div> <!-- END mainTop -->
	<div class="page-buffer"></div>	
	</div> <!-- END wrapper -->

{% endblock %}